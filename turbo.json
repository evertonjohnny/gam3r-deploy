{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL", "DIRECT_URL", "NEXT_PUBLIC_API_URL", "JWT_SECRET"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "DIRECT_URL", "NEXT_PUBLIC_API_URL", "JWT_SECRET"]
    }
  }
}
